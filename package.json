{
    "name": "tamarin",
    "version": "0.0.2",
    "engines": {
        "vscode": "^1.44.0"
    },
    "icon": "images/icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/gilcu3/vscode-tamarin"
    },
    "publisher": "gilcu3",
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "activationEvents": [
        "onLanguage:tamarin"
    ],
    "contributes": {
        "languages": [
            {
                "id": "tamarin",
                "aliases": [
                    "tamarin"
                ],
                "extensions": [
                    ".spthy"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "tamarin",
                "scopeName": "source.tamarin",
                "path": "./syntaxes/tamarin.tmLanguage.xml"
            }
        ],
        "snippets": [
            {
                "language": "tamarin",
                "path": "./snippets/snippets.json"
            }
        ],
        "commands": [
            {
                "command": "tamarin.checkSyntax",
                "title": "Tamarin Check Syntax"
            },
            {
                "command": "tamarin.checkSemantics",
                "title": "Tamarin Check Semantics"
            },
            {
                "command": "tamarin.runServer",
                "title": "Tamarin Run Code in Server"
            }
        ],
        "keybindings": [
            {
                "command": "tamarin.checkSyntax",
                "key": "ctrl+alt+q"
            },
            {
                "command": "tamarin.checkSemantics",
                "key": "ctrl+alt+b"
            },
            {
                "command": "tamarin.runServer",
                "key": "ctrl+alt+l"
            },
            {
                "command": "tamarin.runConsoleProofCommand",
                "key": "ctrl+alt+p"
            }
        ]
    },
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.44.0",
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.2",
        "@types/node": "^13.11.0",
        "eslint": "^6.8.0",
        "@typescript-eslint/parser": "^2.26.0",
        "@typescript-eslint/eslint-plugin": "^2.26.0",
        "glob": "^7.1.6",
        "mocha": "^7.1.1",
        "typescript": "^3.8.3",
        "vscode-test": "^1.3.0"
    }
}
